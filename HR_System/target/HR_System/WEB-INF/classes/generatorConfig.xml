<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" 
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>


    <!--
        targetRuntime="MyBatis3Simple":生成简单版的CRUD
        MyBatis3:豪华版

     -->

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- jdbcConnection：指定如何连接到目标数据库 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://39.107.252.4:3306/TR?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false&amp;serverTimezone = GMT&amp;allowPublicKeyRetrieval=true"
                        userId="public">
        </jdbcConnection>

        <!--  -->
        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- javaModelGenerator：指定javaBean的生成策略
        targetPackage="test.model"：目标包名
        targetProject="\MBGTestProject\src"：目标工程
        -->
        <javaModelGenerator targetPackage="com.train.pojo"
                            targetProject=".\src\main\Java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- sqlMapGenerator：sql映射生成策略： -->
        <sqlMapGenerator targetPackage="./mapper"
                         targetProject=".\src\main\Resources\mapper">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- javaClientGenerator:指定mapper接口所在的位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.train.dao"
                             targetProject=".\src\main\Java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 指定要逆向分析哪些表：根据表要创建javaBean -->
        <table tableName="t_response" domainObjectName="Response">
            <columnOverride column="summary" javaType="java.lang.String" jdbcType="VARCHAR" />
            <columnOverride column="result" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <columnOverride column="view" javaType="java.lang.String" jdbcType="VARCHAR" />
        </table>

        <table tableName="t_status" domainObjectName="Status"/>

        <table tableName="t_train" domainObjectName="Train">
            <columnOverride column="t_member" javaType="java.lang.String" jdbcType="VARCHAR" />
            <columnOverride column="t_goal" javaType="java.lang.String" jdbcType="VARCHAR"/>
        </table>

    </context>
</generatorConfiguration>